@page "/"
@layout MainLayout

@inject NavigationManager NavigationManager


<div class="container text-center py-5">
    <h1 class="display-4 mb-4">Welcome to Oman Security Application</h1>
    <p class="lead">This application allows you to submit police reports electronically along with photo, video, or audio evidence.</p>
    <p class="lead">We rely on your eyes and ears to help keep our streets secure. With just a few clicks, you can submit a report anonymously and be assured that your information will be taken seriously.</p>
    <button class="btn btn-primary btn-lg rounded-pill px-5 mt-5" @onclick="@(() => NavigationManager.NavigateTo("/login"))">Get Started</button>
</div>

<footer class="bg-dark text-white text-center py-3">
    <p>&copy; @DateTime.Now.Year - Oman Security App. All Rights Reserved.</p>
</footer>


<style>
    body {
        background: linear-gradient(135deg, #4b6cb7, #182848);
    }

    h1 {
        color: #fff;
        font-size: 36px;
        font-weight: bold;
        text-shadow: 2px 2px rgba(0, 0, 0, 0.3);
    }

    button:focus {
        box-shadow: none;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

        .btn-primary:active {
            background-color: #0062cc;
            border-color: #005cbf;
        }

    p {
        color: #fff;
        text-shadow: 2px 2px rgba(0, 0, 0, 0.3);
    }

    .container {
        background-color: rgba(0, 0, 0, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    .form-group label {
        color: #fff;
        font-size: 18px;
        font-weight: bold;
        text-shadow: 1px 1px rgba(0, 0, 0, 0.3);
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.8);
        color: #000;
        border: none;
        border-radius: 5px;
    }
</style>